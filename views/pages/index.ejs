      <h1><span class="glyphicon glyphicon-plus"></span> Add A Project</h1>
        

      <div class="section-heading text-center">
        <form name = "insert_project_form">
          <h3>Project Name:</h3>
          <input type="text" name="project"> 

          <h3>Client Name:</h3>
          <input type="text" name="client"> 

          <h3>Focus Area:</h3>
          <input type="text" name="focus"> 

          <h3>Role Needed:</h3> 
          <input type="text" name="role"> 

          <h3>Skill Needed:</h3>  
          <input type="text" name="skill"> 

            <p>
              <button type="button" id = "submit_project_form">
              Submit
              </button>
            </p>
        </form> 
      </div>
    </section>
      <script type = "text/javaspcript"  src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
             <script type="application/javascript">
       
              document.getElementById("submit_project_form").addEventListener("click", submit)
              function submit(){
                var form = document.forms['insert_project_form']
                var inputs=form.getElementsByTagName('input')
                var data = {}
                for(var i = 0; i<inputs.length; i++)
                {
                  var input = inputs[i]
                  data[input.name] = input.value
                }
                $.ajax({
                  type:'POST',
                  data: JSON.stringify(data),
                  url: '/insertProj',
                  dataType: 'json',
                  contentType: 'application/json; charset=UTF-8',
                  success:success(data)
                  })
              }
              function success(data) {
                console.log('Success: ', data)
              }
      </script>
